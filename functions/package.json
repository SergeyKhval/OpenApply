    "directory": "functions"
  },
  "bugs": {
    "url": "https://github.com/SergeyKhval/OpenApply/issues"
  },
  "keywords": [
    "firebase-functions",
    "cloud-functions",
    "serverless",
    "ai",
    "stripe"
  ],
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
