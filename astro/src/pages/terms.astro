  <Footer />
</Layout>

<style>
  .prose h2 {
    margin-top: 2em;
  }
  
  .prose h3 {
    margin-top: 1.5em;
  }
  
  .prose a {
    color: hsl(var(--primary));
  }
  
  .prose a:hover {
    text-decoration: underline;
  }
</style>
