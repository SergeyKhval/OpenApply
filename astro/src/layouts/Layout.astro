---
import '../styles/global.css';
import PostHog from "../components/posthog.astro";
---
<!doctype html>
<html lang="en" class="dark">
	<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
        <link
                href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
                rel="stylesheet"
        />

    <title>OpenApply - AI Job Search Copilot with Resume Reviews, Paste‑a‑Link Import, and Job Tailored Cover Letters</title>
    <meta
      name="description"
      content="Your AI job search copilot. Track applications free, paste a job link to auto‑fill, and use coins only when you want AI resume reviews or cover letters."
    />
    <meta name="author" content="OpenApply" />
    <meta name="keywords" content="AI job search copilot, AI resume reviews, AI resume checker, ATS match, job application tracker, job tracker app, paste job link import, spreadsheet import job tracker, job tailored cover letters, self‑host job tracker" />

    <meta
      property="og:title"
      content="OpenApply - AI Job Search Copilot with Resume Reviews, Paste‑a‑Link Import, and Job Tailored Cover Letters"
    />
    <meta
      property="og:description"
      content="Your AI job search copilot. Track applications free, paste a job link to auto‑fill, and use coins only when you want AI resume reviews or cover letters."
    />
    <meta property="og:type" content="website" />
    <meta name="generator" content={Astro.generator} />
    {import.meta.env.PUBLIC_POSTHOG_API_KEY &&
      (<PostHog
        apiKey={import.meta.env.PUBLIC_POSTHOG_API_KEY}
        apiHost={import.meta.env.PUBLIC_POSTHOG_HOST}
      />)
    }
	</head>
	<body>
  <slot />

	</body>
</html>

<style>
	/* Phosphor Icons CSS */
	@import url("https://unpkg.com/@phosphor-icons/web@2.1.2/src/regular/style.css");
</style>
